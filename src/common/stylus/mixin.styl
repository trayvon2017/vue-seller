bg-image($path)
  background-image: url($path + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($path + "@3x.png")

border-1px($color)
  position relative
  &::after
    position absolute
    bottom 0
    left 0
    width 100%
    content ""
    border-top 1px solid $color